{% extends 'base.html.twig' %}

{% block title %}Appointments
{% endblock %}

{% block body %}
	<h1>Appointments</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ appointment.id }}</td>
			</tr>
			<tr>
				<th>Heure de début</th>
				<td>{{ appointment.startTime ? appointment.startTime|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Heure de fin</th>
				<td>{{ appointment.endTime ? appointment.endTime|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('appointments_index') }}">
		<button class="btn btn-outline-secondary">
			Retour à la liste
		</button>
	</a>

	<a href="{{ path('appointments_edit', {'id': appointment.id}) }}">
		<button class="btn btn-info">
			Éditer
		</button>
	</a>

	{{ include('appointments/_delete_form.html.twig') }}
{% endblock %}
