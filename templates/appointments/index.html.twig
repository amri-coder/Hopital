{% extends 'base.html.twig' %}

{% block title %}Appointments index
{% endblock %}

{% block body %}
	<h1>Index des appoinetments</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Heure de début</th>
				<th>Heure de fin</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for appointment in appointments %}
				<tr>
					<td>{{ appointment.id }}</td>
					<td>{{ appointment.startTime ? appointment.startTime|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ appointment.endTime ? appointment.endTime|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('appointments_show', {'id': appointment.id}) }}">show</a>
						<a href="{{ path('appointments_edit', {'id': appointment.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">Aucun enregistrement trouvé !</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('appointments_new') }}">Créer un nouveau</a>
{% endblock %}
