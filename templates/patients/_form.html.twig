<div class="form-control">

	{{ form_start(form) }}

	<div class="my-custom-class-for-errors">
		{{ form_errors(form) }}
	</div>

	<div class="row">
		<div class="col">
			{{ form_row(form.lastname) }}
		</div>
		<div class="col" id="some-custom-id">
			{{ form_row(form.lastname) }}
		</div>
	</div>

	<div class="row">
		<div class="col">
			{{ form_row(form.firstname) }}
		</div>
		<div class="col" id="some-custom-id">
			{{ form_row(form.firstname) }}
		</div>
	</div>


	<div class="row">
		<div class="col">
			{{ form_row(form.birthDate) }}
		</div>
		<div class="col" id="some-custom-id">
			{{ form_row(form.birthDate) }}
		</div>
	</div>

	<div class="row">
		<div class="col">
			{{ form_row(form.email) }}
		</div>
		<div class="col" id="some-custom-id">
			{{ form_row(form.email) }}
		</div>
	</div>

	<div class="row">
		<div class="col">
			{{ form_row(form.vitalcardNumber) }}
		</div>
		<div class="col" id="some-custom-id">
			{{ form_row(form.vitalcardNumber) }}
		</div>
	</div>

	{{ form_widget(form) }}
	<button class="btn btn-success">{{ button_label|default('Sauvegarder') }}</button>
	{{ form_end(form) }}


</div>
